{% extends 'ChoferesBundle:Layout:layout.html.twig' %}
{% form_theme form 'ChoferesBundle:Reporte:fields.html.twig' %}

{% block title %}
Reporte Cursos por tipo
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader %}
<h1 class="page-title">Reporte Cursos por tipo</h1>
<ol class="breadcrumb">
  <li><a href="{{ path('home') }}">Inicio</a></li>
  <li class="active">Reportes</li>
</ol>
{% endblock %}

{% block page %}
<div class="panel">
  <div class="panel-body container-fluid">
    <form action="{{ path('reporte_cursos_por_tipo') }}" method="POST">
      <div class="row">
        <h4 class="example-title">
          Recordar que la informaci칩n sobre montos solo est치 disponible para cursos creados a partir del {{ fechaModuloPago }}.
        </h4>
      </div>
      <div class="row">
        <h4 class="example-title">
          Cualquier reporte que incluya cursos creados antes de la fecha no presentar치 informaci칩n sobre montos.
        </h4>
      </div>
      <hr>
      <div class="row">
        {{ form_widget(form.fechaInicioDesde, {'attr': {'class': 'fechaVigencia form-control', 'data-provide': 'datepicker', 'data-date-format': 'dd/mm/yyyy', 'data-date-autoclose': 'true', 'data-date-language': 'es'}}) }}
        {{ form_widget(form.fechaInicioHasta, {'attr': {'class': 'fechaVigencia form-control', 'data-provide': 'datepicker', 'data-date-format': 'dd/mm/yyyy', 'data-date-autoclose': 'true', 'data-date-language': 'es'}}) }}
      </div>
      <div class="row">
        <div class="col-sm-3 col-md-3 margin-top-20">
          {{ form_widget(form.reset, {'attr': {'class': 'btn btn-outline btn-default'}}) }}
          <button type="submit" class="btn btn-success">Generar</button>
        </div>
      </div>
      {{ form_end(form) }}
    </form>
  </div>
</div>
{% endblock %}
