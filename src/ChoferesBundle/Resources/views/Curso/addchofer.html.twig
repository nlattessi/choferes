{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}
{% block javascript %}
    <script src="{{ asset('bundles/choferes/js/autocompletar.js') }}"></script>
{% endblock %}
{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': 'Curso'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}
    <input value="" id="autocompletarInput">
    <div id="autocompletarDiv"></div>


    <form class="well" action="{{ path('curso_addchofer') }}" method="post" >
        <input type="hidden" name="idCurso" value="{{idCurso}}">
        <button type="submit" class="btn btn-success"> agregar los siguientes choferes</button>
    </form>
    <div id="listaChoferes">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Tiene curso basico</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>

                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.apellido }}</td>
                    <td>{{ entity.dni }}</td>

                    <td>{% if entity.tieneCursoBasico %}Si{% else %}No{% endif %}</td>
                    <td>
                        <a class="btn btn-mini" href="{{ path('curso_borrarchofer', { 'idBorrar': entity.id, 'idCurso':idCurso  }) }}">
                            Borrar
                        </a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
