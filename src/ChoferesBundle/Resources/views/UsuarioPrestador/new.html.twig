  <div class="panel-body container-fluid">
    <form action="{{ path('usuarioprestador_create') }}" method="post" {{ form_enctype(form) }}>
      <div class="row ">
        <div class="col-sm-6 col-md-6 margin-top-30">
                            <h4 class="example-title">Usuario</h4>
                                <div class="form-group">
                                  {{ form_widget(form.usuario, {'attr': {'class': 'form-control'}}) }}
                                </div>
                          </div>
                          <div class="col-sm-6 col-md-6 margin-top-30">
                                              <h4 class="example-title">Prestador</h4>
                                                  <div class="form-group">
