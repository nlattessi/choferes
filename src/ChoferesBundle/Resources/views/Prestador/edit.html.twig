{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} -  {{ 'views.edit.edit'|trans({'%entity%': 'Prestador'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader %}
    <h1 class="page-title">Editar prestador</h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('prestador') }}">Prestadores</a></li>
        <li class="active">Editar Prestador</li>
    </ol>
{% endblock %}

{% block page %}
<div class="panel">
  <div class="panel-body">
    <form action="{{ path('prestador_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped" id="exampleAddRow">
      <tbody>
        <tr class="gradeA">
          <td><b>Nombre / Razón social</td>
          <td>{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>CUIT</td>
          <td>{{ form_widget(edit_form.cuit, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Dirección</td>
          <td>{{ form_widget(edit_form.direccion, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Teléfono</td>
          <td>{{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>E-mail</td>
          <td>{{ form_widget(edit_form.mail, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
      </tbody>
    </table>
    </div>
    <div class="dt-panelfooter clearfix">
      <button type="submit" class="btn btn btn-success margin-top-10">Guardar</button>
      <a id="listado" href="{{ path('prestador') }}" class="btn btn-outline btn-default margin-top-10">Volver al listado</a>
    </div>
    {{ form_widget(edit_form._token) }}
    </form>
  </div>
</div>
{% endblock %}

{% block javascript %}

  <script type="application/javascript">
    getInLocalStorage('prestador')
  </script>

    <script src="{{ asset('bundles/choferes/js/inputmask.js') }}"></script>
    <script src="{{ asset('bundles/choferes/js/jquery.inputmask.js') }}"></script>
    <script src="{{ asset('bundles/choferes/js/cuilmask.js') }}" type="text/javascript"></script>
{% endblock %}
