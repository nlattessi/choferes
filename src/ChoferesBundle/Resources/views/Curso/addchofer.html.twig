{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}
{% block javascript %}
    <script src="{{ asset('bundles/choferes/js/autocompletar.js') }}"></script>
{% endblock %}
{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': 'Curso'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}
    <div class="container">
      <div class="row">
      <div class="span4 well">
        <legend>Agregar chofer</legend>
        <form action="{{ path('curso_addchofer') }}" method="post">
          <input id="typeahead" type="text" class="span4" data-provide="typeahead" autocomplete="off" placeholder="Buscar chofer">
          <input id="idcurso" type="hidden" name="idCurso" value="{{idCurso}}">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <button type="submit" name="submit" class="btn btn-success btn-block disabled" id="addChoferSubmit" disabled>Agregar los siguientes choferes</button>
          <hr>
          <ul id="choferesCandidatos" class="unstyled"></ul>
        </form>
      </div>
      </div>
    </div>

    <div>
        <div class="float-left">
            <a class="btn" href="{{ path('curso') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
    </div>

    <div id="listaChoferes">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Tiene curso basico</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>

                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.apellido }}</td>
                    <td>{{ entity.dni }}</td>

                    <td>{% if entity.tieneCursoBasico %}Si{% else %}No{% endif %}</td>
                    <td>
                        <a class="btn btn-mini" href="{{ path('curso_borrarchofer', { 'idBorrar': entity.id, 'idCurso':idCurso  }) }}">
                            Borrar
                        </a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
