{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block javascript %}
    <script src="{{ asset('bundles/choferes/js/inputmask.js') }}"></script>
    <script src="{{ asset('bundles/choferes/js/jquery.inputmask.js') }}"></script>
    <script src="{{ asset('bundles/choferes/js/cuilmask.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}
    Reportes
{% endblock %}

{% block menu %}
    {{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader%}
    <h1 class="page-title">Cantidad de choferes que realizaron cursos este mes por tipo de curso</h1>

{% endblock %}

{% block page %}

    <!-- Panel Table Add Row -->
    <div class="panel">
        <div class="panel-body">

            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>

                    <th>Tipo</th>
                    <th>Cantidad</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in resultado %}
                    <tr class="gradeA">
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.cantidad }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

    </div>

{% endblock %}
