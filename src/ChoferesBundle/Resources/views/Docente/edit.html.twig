{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} -  {{ 'views.edit.edit'|trans({'%entity%': 'Docente'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader %}<h1 class="page-title">Editar Docente</h1>{% endblock %}

{% block page %}
<div class="panel">
  <div class="panel-body">
    <form action="{{ path('docente_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <table class="table table-bordered table-hover table-striped" id="exampleAddRow">
      <tbody>
        <tr class="gradeA">
          <td><b>Nombre</td>
          <td>{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Apellido</td>
          <td>{{ form_widget(edit_form.apellido, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>DNI</td>
          <td>{{ form_widget(edit_form.dni, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Prestador</td>
          <td>{{ form_widget(edit_form.prestador, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
      </tbody>
    </table>
    <div class="dt-panelfooter clearfix">
      <button type="submit" class="btn btn btn-success margin-top-10">Guardar</button>
      <a href="{{ path('docente') }}" class="btn btn-outline btn-default margin-top-10">Volver al listado</a>
    </div>
    {{ form_widget(edit_form._token) }}
    </form>
  </div>
</div>
{% endblock %}
