{% block _choferesbundle_usuariofiltertype_mail_widget %}
  <div class="col-sm-6 col-md-4">
    <div class="">
      <h4 class="example-title">Email</h4>
      {{ block('form_widget_simple') }}
    </div>
  </div>
{% endblock %}

{% block form_errors %}
  {% spaceless %}
    {% if errors|length > 0 %}
      {% for error in errors %}
        <div class="alert ng-isolate-scope alert-danger alert-dismissible">
          <div><span class="ng-binding ng-scope">{{ error.message }}</span></div>
        </div>
      {% endfor %}
    {% endif %}
  {% endspaceless %}
{% endblock %}
