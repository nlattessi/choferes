{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': 'Curso'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader %}
<h1 class="page-title">Cargar Notas</h1>
<ol class="breadcrumb">
  <li><a href="{{ path('curso') }}">Cursos</a></li>
  <li class="active">Cargar Notas</li>
</ol>
{% endblock %}

{% block page %}
<div class="panel">
  <div class="panel-body">
    <form action="{{ path('curso_realizar', { 'id': curso.id }) }}" method="post">
      <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped" id="exampleAddRow">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Aprobado?</th>
          </tr>
        </thead>
        <tbody>
          {% for choferCurso in curso.choferCursos %}
            <tr class="gradeA">
              <td>{{ choferCurso.chofer.nombre }}</td>
              <td>{{ choferCurso.chofer.apellido }}</td>
              <td>{{ choferCurso.chofer.dni }}</td>
              <td class="actions">
                <div class="checkbox-custom checkbox-inline checkbox-primary checkbox-lg pull-left">
                  <input type="checkbox" id="inputCheckbox{{ choferCurso.id }}" name="{{ choferCurso.id }}" value="SI"{% if choferCurso.isAprobado %}checked{% endif %}>
                  <label for="inputCheckbox{{ choferCurso.id }}"></label>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
      <div class="dt-panelfooter clearfix">
        <button type="submit" name="submit" class="btn btn-success margin-top-10" id="cargarNotasSubmit">Cargar Notas</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}
