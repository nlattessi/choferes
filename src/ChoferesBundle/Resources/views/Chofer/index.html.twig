{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Chofer'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}

<div class="row">

    <div class="span8">
        <h1>{{ 'views.index.list'|trans({'%entity%': 'Chofer'}, 'JordiLlonchCrudGeneratorBundle') }}</h1>
    </div>
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="span2">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('chofer') }}" method="get" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.id) }}
                {{ form_row(filterForm.nombre) }}
                {{ form_row(filterForm.apellido) }}
                {{ form_row(filterForm.dni) }}
                {{ form_row(filterForm.precuil) }}
                {{ form_row(filterForm.colacuil) }}
                {{ form_row(filterForm.cuilEmpresa) }}
                {{ form_row(filterForm.tieneCursoBasico) }}
                {{ form_rest(filterForm) }}

                <p>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
        </div>
    </div>

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Dni</th>
            <th>Precuil</th>
            <th>Colacuil</th>
            <th>Cuilempresa</th>
            <th>Matricula</th>
            <th>Tienecursobasico</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('chofer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellido }}</td>
            <td>{{ entity.dni }}</td>
            <td>{{ entity.precuil }}</td>
            <td>{{ entity.colacuil }}</td>
            <td>{{ entity.cuilEmpresa }}</td>
            <td>{{ entity.matricula }}</td>
            <td>{% if entity.tieneCursoBasico %}true{% else %}false{% endif %}</td>
            <td>
              <a class="btn btn-mini" href="{{ path('chofer_show', { 'id': entity.id }) }}">
                  {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
              </a>
              <a class="btn btn-mini" href="{{ path('chofer_edit', { 'id': entity.id }) }}">
                  {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
              </a>
              <a class="btn btn-mini" href="{{ path('chofer_consulta_id', { 'id': entity.id }) }}">estatus</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn btn-primary likepaginator" href="{{ path('chofer_new') }}">
            {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Chofer
        </a>
    </div>
    </div>

{% endblock %}
