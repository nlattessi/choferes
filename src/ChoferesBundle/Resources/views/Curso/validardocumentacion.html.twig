{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.new.creation'|trans({'%entity%': 'Curso'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}

    <div id="listaChoferes">
        <form action="{{ path('curso_documentacion', { 'id': curso.id }) }}" method="post">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Documentación</th>
            </tr>
            </thead>
            <tbody>

            {% for entity in entities %}
                <tr>

                    <td>{{ entity.chofer.nombre }}</td>
                    <td>{{ entity.chofer.apellido }}</td>
                    <td>{{ entity.chofer.dni }}</td>
                    <td>
                    <input type="checkbox" name="{{ entity.id }}" value="SI"
                            {% if(entity.documentacion) %}
                                checked
                            {% endif %}

                            /> </td>

                </tr>
            {% endfor %}


            </tbody>
        </table>
            <button type="submit" name="submit" class="btn btn-success"
                    id="cargarNotasSubmit" >Actualizar Documentación</button>
        </form>
    </div>
{% endblock %}
