{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} -  {{ 'views.edit.edit'|trans({'%entity%': 'Sede'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block pageHeader %}
    <h1 class="page-title">Editar Sede</h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('sede') }}">Sedes</a></li>
        <li class="active">Editar Sede</li>
    </ol>
{% endblock %}

{% block page %}
<div class="panel">
  <div class="panel-body">
    <form action="{{ path('sede_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <table class="table table-bordered table-hover table-striped" id="exampleAddRow">
      <tbody>
        <tr class="gradeA">
          <td><b>Nombre</td>
          <td>{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Direcci√≥n</td>
          <td>{{ form_widget(edit_form.direccion, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Provincia</td>
          <td>{{ form_widget(edit_form.provincia, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Ciudad</td>
          <td>{{ form_widget(edit_form.ciudad, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Provincia</td>
          <td>{{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
        <tr class="gradeA">
          <td><b>Prestador</td>
          <td>{{ form_widget(edit_form.prestador, {'attr': {'class': 'form-control'}}) }}</td>
        </tr>
      </tbody>
    </table>
    <div class="dt-panelfooter clearfix">
      <button type="submit" class="btn btn btn-success margin-top-10">Guardar</button>
      <a id="listado"  href="{{ path('sede') }}" class="btn btn-outline btn-default margin-top-10">Volver al listado</a>
    </div>
    {{ form_widget(edit_form._token) }}
    </form>
  </div>
</div>

  <script type="application/javascript">
    getInLocalStorage('sede')
  </script>

{% endblock %}
