{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Docente'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}

{% block page %}


    <!-- Page -->
    <div class="animsition">
        <div class="page-header">
            <h1 class="page-title">Ver</h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('docente') }}">Docente</a></li>
                <li class="active">Ver</li>
            </ol>


        </div>
        <div class="page-content">

            <!-- Panel Table Add Row -->
            <div class="panel">
                <div class="panel-body">

                    <table class="table table-bordered table-hover table-striped" id="exampleAddRow">

                        <tbody>
                        <tr class="gradeA">
                            <td><b>ID</b></td>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr class="gradeA">
                            <td><b>Usuario</b></td>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                        <tr class="gradeA">
                            <td><b>Apellido</b></td>
                            <td>{{ entity.apellido }}</td>
                        </tr>
                        <tr class="gradeA">
                            <td><b>DNI</b></td>
                            <td>{{ entity.dni }}</td>
                        </tr>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if (app.user.rol != 'ROLE_PRESTADOR') %}
                                <tr class="gradeA">
                                    <td><b>Prestador</b></td>
                                    <td>{{ entity.prestador }}</td>
                                </tr>
                            {% endif %}
                        {% endif %}
                        </tbody>
                    </table>


                    <div class="dt-panelfooter clearfix">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if (app.user.rol != 'ROLE_PRESTADOR') %}
                                <button type="button" onclick="location.href='{{ path('docente_edit', { 'id': entity.id }) }}'" class="btn btn-success margin-top-10">Editar</button>
                            {% endif %}
                        {% endif %}

                        <button type="button" onclick="location.href='{{ path('docente') }}'" class="btn btn-outline btn-default margin-top-10">Volver al listado</button>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if (app.user.rol != 'ROLE_PRESTADOR') %}
                                <div class="float-left">
                                    <form action="{{ path('docente_delete', { 'id': entity.id }) }}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        {{ form_widget(delete_form) }}
                                        <button class="pull-right btn btn-default margin-top-10r" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">Eliminar</button>
                                    </form>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>



                </div>
            </div>
        </div>
    </div>
    <!-- End Page -->


{% endblock %}
