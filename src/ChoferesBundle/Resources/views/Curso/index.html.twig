{% extends 'ChoferesBundle:Layout:layout.html.twig' %}

{% block title %}
    Cursos
{% endblock %}

{% block menu %}
{{ include('ChoferesBundle:NavBars:navbar.html.twig') }}
{% endblock %}
{% block pageHeader%}
    <h1 class="page-title">Cursos</h1>
    {% if form_errors(filterForm) %}
        <div class="span2">

            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(filterForm) }}
            </div>

            &nbsp;
        </div>
    {% endif %}
    <div class="page-header-actions">
        <a class="btn btn-sm btn-default btn-outline btn-round" data-toggle="collapse"  data-target="#filters" aria-expanded="false" aria-controls="exampleCollapseExample">
            <i class="icon wb-chevron-down" aria-hidden="true"></i>
            <span class="hidden-xs">Filtrar</span>
        </a>
    </div>


    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('curso') }}" method="get" {{ form_enctype(filterForm) }}>
                {#{{ form_row(filterForm.id) }}#}
                {{ form_row(filterForm.fechaInicio) }}
                {{ form_row(filterForm.fechaFin) }}
                {{ form_row(filterForm.codigo) }}
                {{ form_rest(filterForm) }}
                <div class="row">
                    <div class="col-sm-6 col-md-4 margin-top-20">
                        <button type="submit" class="btn btn btn-outline btn-default " name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                        <button type="submit" class="btn btn-success " name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                    </div>
                </div> <!-- row-->
            </form>
        </div>
    </div>
{% endblock %}
{% block page %}
    <!-- Panel Table Add Row -->
    <div class="panel">
        <div class="panel-body">

            <table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha de inicio</th>
            <th>Fecha de fin</th>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if (app.user.rol != 'ROLE_PRESTADOR') %}
                    <th>Prestador</th>
                {% endif %}
            {% endif %}
            <th>Codigo</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr  class="gradeA">
            <td><a href="{{ path('curso_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('d/m/Y H:i') }}{% endif %}</td>
            <td>{% if entity.fechaFin %}{{ entity.fechaFin|date('d/m/Y H:i') }}{% endif %}</td>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if (app.user.rol != 'ROLE_PRESTADOR') %}
                    <td>{{ entity.prestador }}</td>
                {% endif %}
            {% endif %}
            <td>{{ entity.codigo }}</td>
            <td>{{ entity.tipocurso }}</td>
            <td>{{ entity.estado }}</td>
            <td>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              {% if app.user.rol == 'ROLE_CNTSV' %}
                  <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="ver"
                     href="{{ path('curso_show', { 'id': entity.id }) }}">
                      <i class="icon wb-eye" aria-hidden="true"></i>
                  </a>
                  <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="editar"
                     href="{{ path('curso_edit', { 'id': entity.id }) }}">
                      <i class="icon wb-pencil" aria-hidden="true"></i>
                  </a>
                  {% if entity.estado.id != 4 %} <!--Estado: Cancelado -->
                  <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="cancelar"
                     href="{{ path('curso_cancelar', { 'id': entity.id }) }}">
                      <i class="icon wb-close red-400" aria-hidden="true"></i>
                  </a>
                  {% endif %}
                  {% if entity.estado.id == 1 %} <!--Estado: Cargado-->
                    <a class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="confirmar"
                       href="{{ path('curso_confirmar', { 'id': entity.id }) }}">
                        <i class="icon wb-check-circle green-600" aria-hidden="true"></i>
                    </a>
                  {% elseif entity.estado.id == 2 %} <!--Estado: Confirmado-->
                    {% if entity.fechaInicio|date('U') >= "now"|date('U') %}
                        <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="agregar choferes"
                         href="{{ path('curso_addchofer', { 'idCurso': entity.id }) }}">
                            <i class="icon wb-user-add" aria-hidden="true"></i>
                      </a>
                    {% endif %}
                  {% elseif entity.estado.id == 3 %} <!--Estado: Por Validar-->
                      <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="aprobar documentaciÃ³n"
                       href="{{ path('curso_documentacion', { 'id': entity.id }) }}">
                        <i class="icon wb-check green-400" aria-hidden="true"></i>
                    </a>
                  {% endif %}
              {% elseif app.user.rol == 'ROLE_PRESTADOR' %}
                  <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="ver"
                   href="{{ path('curso_show', { 'id': entity.id }) }}">
                    <i class="icon wb-eye" aria-hidden="true"></i>
                </a>
                {% if entity.estado.id == 1 and entity.fechaInicio|date('U') > "+4 days"|date('U') %} <!--Estado: Cargado-->
                    <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="editar"
                     href="{{ path('curso_edit', { 'id': entity.id }) }}">
                      <i class="icon wb-pencil" aria-hidden="true"></i>
                  </a>
                    <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="cancelar"
                     href="{{ path('curso_cancelar', { 'id': entity.id }) }}">
                      <i class="icon wb-close red-400" aria-hidden="true"></i>
                  </a>
                {% elseif entity.estado.id == 2 %} <!--Estado: Confirmado-->
                  {% if entity.fechaInicio|date('U') < "now"|date('U')  %}
                     <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="agregar choferes"
                       href="{{ path('curso_addchofer', { 'idCurso': entity.id }) }}">
                        <i class="icon wb-user-add" aria-hidden="true"></i>
                    </a>
                  {% endif %}
                  {% if entity.fechaInicio|date('U') > "+4 days"|date('U') %}
                      <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="cargar notas"
                       href="{{ path('curso_realizar', { 'id': entity.id }) }}">
                          <i class="icon wb-edit" aria-hidden="true"></i>
                    </a>

                    <a  class="btn btn-sm btn-icon btn-pure btn-default on-default edit-row" data-toggle="tooltip" data-original-title="cancelar"
                     href="{{ path('curso_cancelar', { 'id': entity.id }) }}">
                      <i class="icon wb-close red-400" aria-hidden="true"></i>
                  </a>
                  {% endif %}
                {% endif %}
              {% endif %}
            {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="dt-panelfooter clearfix">
  <a class="btn btn btn-success margin-top-10 likepaginator" href="{{ path('curso_new') }}">
          {{ 'views.index.createnew'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} Curso
      </a>

    <div class="dataTables_paginate paging_simple_numbers" id="exampleTableTools_paginate">
        {{ pagerHtml|raw }}
    </div>
</div>

    </div>
  </div>

{% endblock %}
